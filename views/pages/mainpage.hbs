<div>
    <ul class="product_list">
        {{#each products}}
        <li id="{{this._id}}"><a href="/products/{{this._id}}">{{this.name}}</a> - {{this.price}}<br />
            {{this.description}}<br />
            <img src={{this.pic}} height="90" width="120">
            <button id="add-to-cart-{{@index}}">Add to cart</button>
        </li>
        {{else}}
        <p>No items match your criteria.</p>
        {{/each}}
        {{!-- <li>items here</li> --}}
    </ul>
</div>
