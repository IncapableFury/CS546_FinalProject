<div>
    <h2 class="header_text"> Happy shopping! </h2>
    <br />
</div>

<div class="container-fluid">
    <div class="row">
        {{#each products}}
        <div class="col-md-3" id="{{this._id}}">
            <figure class="card card-product">
                <div class="img-wrap"><img src={{this.pic}} alt="No image"></div>
                <figcaption class="info-wrap">
                    {{!-- <h4 class="title">{{this.name}}</h4> --}}
                    <h4 class="title"> <a class="each_product_title" href="/products/{{this._id}}">{{this.name}}</a>
                    </h4>
                    <p class="desc">{{this.category}}</p>
                    <div class="rating-wrap">
                        <div class="label-rating"></div>
                    </div> <!-- rating-wrap.// -->
                </figcaption>
                <div class="bottom-wrap">
                    	<div class="single-product" id="{{this._id}}">
                            <button class="btn btn-sm btn-primary float-right" id="add-to-cart-{{@index}}"> Add to cart </button>
                        </div>
                    <div class="price-wrap h5">
                        <span class="price-new">${{this.price}}.00</span>
                    </div> <!-- price-wrap.// -->
                </div> <!-- bottom-wrap.// -->
            </figure>
        </div>

        {{else}}
        <p>No items match your criteria.</p>
        {{/each}}

    </div>
    <div class="pagination pagination-centered">
        <ul>
            {{#paginate pagination type="first"}}
            <li {{#if disabled}}class="disabled" {{/if}}><a href="?page={{n}}">First</a></li>
            {{/paginate}}
            {{#paginate pagination type="previous"}}
            <li {{#if disabled}}class="disabled" {{/if}}><a href="?page={{n}}">Prev</a></li>
            {{/paginate}}
            {{#paginate pagination type="middle" limit="7"}}
            <li {{#if active}}class="active" {{/if}}><a href="?page={{n}}">{{n}}</a></li>
            {{/paginate}}
            {{#paginate pagination type="next"}}
            <li {{#if disabled}}class="disabled" {{/if}}><a href="?page={{n}}">Next</a></li>
            {{/paginate}}
            {{#paginate pagination type="last"}}
            <li {{#if disabled}}class="disabled" {{/if}}><a href="?page={{n}}">Last</a></li>
            {{/paginate}}
        </ul>
    </div>
