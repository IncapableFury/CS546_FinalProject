<body>
<div class="shopping-cart container-fluid">
    <h2 class="header_text"> Wish list </h2>
    <br />
    <br />
    <h3></h3>
</div>
<div class="container-fluid">
    <div class="row">
        {{#each wishList}}
        <div class="col-md-3" id="{{this._id}}">
            <figure class="card card-product">
                <div class="img-wrap"><img src={{this.pic}} alt="No image"></div>

                <figcaption class="info-wrap">
                    <h4 class="title"> <a class="each_product_title" href="/products/{{this._id}}">{{this.name}}</a> -
                        <span class="price-new">${{this.price}}.00 X {{this.count}}</span>
                    </h4>
                </figcaption>
                {{!-- <div class="price-wrap h5"> --}}
                {{!-- <span class="price-new">${{this.price}}.00</span> --}}
                {{!-- </div>  --}}
            </figure>
            {{!-- <div class="bottom-wrap"> --}}
            <button class="btn btn-sm button-primary" id="move-to-cart-0"> Move to cart</button>
            <button class="btn btn-sm button-primary" id="remove-item-wishlist-{{@index}}">Remove</button>
            <br />
            <br />
            <br />
            {{!-- </div>  --}}
            {{!-- </figure> --}}
        </div>

        {{else}}
        <p class="container-fluid">No items in your wish list.</p>
        {{/each}}
    </div>

    <br />
    <br />
    <div id="cart-summary">
        <div class="price-wrap h3">
            <span class="price-new">Total price: ${{cartTotalValue}}.00</span>
        </div>
        <form id="go-to-wishlist" action="/users/shoppingcart">
            <button class="btn btn-lg button-primary">Go to shopping cart</button>
            <button class="btn btn-lg button-primary" id="clear-wishlist">Clear wishlist</button>
        </form>

    </div>
    <br />
    <br />
</div>
<script>
    let wishList = "{{wishList}}"
</script>
</body>